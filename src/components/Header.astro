---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, HOMEPAGE_URL } from '../consts';
import { IoLogoGithub } from 'react-icons/io5/index.js';
import ICIcon from './icons/footprint.tsx';
import ThemeToggle from './ThemeToggleButton.tsx';
---

<header class="fixed w-full p-2 z-20 backdrop-blur-md">
  <div class="mx-auto max-w-3xl">
	<nav class="flex items-center gap-3 text-base">
    <h2 class="font-semibold tracking-tighter p-2 font-mplus text-lg">
      <a href="/" class="group"> 
      <ICIcon />
      Gerardo Marx&apos; Blog
    </h2>
    </a>
		<div class="items-center gap-6 hidden md:flex">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href={HOMEPAGE_URL}>About</HeaderLink>
          <HeaderLink href="/about"><IoLogoGithub/> Source</HeaderLink>
		</div>
    <div class="flex-1"></div>
    <ThemeToggle client:load/>
	</nav>
  </div>
</header>
