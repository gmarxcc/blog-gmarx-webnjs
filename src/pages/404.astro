---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, HOMEPAGE_URL } from '../consts';
import Body from '../components/Body.astro';
import Content from '../components/Content.astro';
import { IoChevronForward } from 'react-icons/io5/index.js';
import Masthead from '../components/Masthead.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Body>
		<Header title={SITE_TITLE} />
		<main class="pt-[78px]">
      <Masthead/>
      <Content>
        <section>
          <h1 class="text-3xl text-center mt-12 mb-8">Sorry, the site you are looking for does not exist.</h1>
          <div class="text-center py-4">
            <a
              class="inline-flex items-center gap-1 underline underline-offset-2 decoration-orange-500"
              href="/"
              >Go to Index <IoChevronForward />
            </a>
          </div><a href="/"> </a>
       </section>
        </Content>
    </main><a href"/">
    <Footer />
    </a><a href="/"> </a>
	</Body>
</html>
